<?xml version="1.0" encoding="utf-8"?>
<com.simple.observer.sample.DefineLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simple.observer.sample.MainActivity">

    <com.simple.observer.sample.DefineTextView
        android:id="@+id/txtColorTv"
        android:text="字体变红色"
        style="@style/view_style"/>


    <com.simple.observer.sample.DefineButton
        android:id="@+id/txtBgBt"
        style="@style/view_style"
        android:text="背景变绿色"/>


    <RadioGroup
        android:id="@+id/txtSizeRg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.simple.observer.sample.DefineRadioButton
            android:id="@+id/txtSizeBigRb"
            style="@style/view_style"
            android:text="字体加大" />

        <com.simple.observer.sample.DefineRadioButton
            android:id="@+id/txtSizeSmallRb"
            style="@style/view_style"
            android:text="字体减小"/>
    </RadioGroup>

    <com.simple.observer.sample.DefineCheckBox
        android:id="@+id/nightModelCb"
        style="@style/view_style"
        android:text="夜间模式"/>

    <com.simple.observer.sample.DefineButton
        android:id="@+id/removeObServerTv"
        android:text="移出观察者集合"
        style="@style/view_style"/>


</com.simple.observer.sample.DefineLinearLayout>
